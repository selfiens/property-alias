{
  "name": "selfiens/property-alias",
  "type": "library",
  "description": "Enables property alias via ClassDoc",
  "license": "MIT",
  "authors": [
    {
      "name": "Kita",
      "homepage": "https://github.com/selfiens"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Selfiens\\PropertyAlias\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Selfiens\\PropertyAlias\\": "tests/"
    }
  },
  "support": {
    "issues": "https://github.com/selfiens/property-alias/issues"
  },
  "scripts": {
    "phpunit": "@php vendor/bin/phpunit",
    "phpstan": "@php vendor/bin/phpstan analyze",
    "phpstan-baseline": "@php vendor/bin/phpstan analyze --generate-baseline",
    "phpstan-clear": "@php vendor/bin/phpstan clear-result-cache"
  }
}
